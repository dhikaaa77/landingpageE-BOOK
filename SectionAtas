  <div class="notif-profile">
    <div class="notif-avatar" id="notifAvatar">S</div>

    <div class="notif-info">
      <div class="notif-name" id="notifName">Ibu Siti ¬∑ Bandung</div>
      <div class="notif-job" id="notifJob">Ibu Rumah Tangga</div>

      <div class="notif-action">
        <span class="notif-icon">üîî</span>
        <span class="notif-check">‚úÖ</span>
        <span class="notif-text" id="notifText">Baru download e-book & bonus lengkap!</span>
      </div>

      <div class="notif-time" id="notifTime">10 menit yang lalu</div>
    </div>
  </div>
