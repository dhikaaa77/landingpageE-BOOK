<script>
const notifBox = document.getElementById("notifBox");
const notifName = document.getElementById("notifName");
const notifJob = document.getElementById("notifJob");
const notifText = document.getElementById("notifText");
const notifTime = document.getElementById("notifTime");
const notifAvatar = document.getElementById("notifAvatar");

const names = ["Siti", "Andi", "Rina", "Wahyu", "Putri", "Arif", "Nanda", "Dewi", "Fajar", "Linda"];
const cities = ["Jakarta", "Bandung", "Surabaya", "Depok", "Bekasi", "Medan", "Malang", "Padang", "Bogor"];
const jobs = ["Ibu Rumah Tangga", "Karyawan Swasta", "Mahasiswa", "Guru", "Penjual Online"];
const actions = [
  "Baru download e-book & bonus lengkap!",
  "Baru membeli e-book Premium!",
  "Baru mendapatkan paket Basic!",
  "Baru mengakses bonus tambahan!",
];

function showNotification() {
  const randomName = names[Math.floor(Math.random() * names.length)];
  const randomCity = cities[Math.floor(Math.random() * cities.length)];
  const randomJob = jobs[Math.floor(Math.random() * jobs.length)];
  const randomAction = actions[Math.floor(Math.random() * actions.length)];

  notifName.textContent = `${randomName} ¬∑ ${randomCity}`;
  notifJob.textContent = randomJob;
  notifText.textContent = randomAction;

  notifAvatar.textContent = randomName.charAt(0).toUpperCase();

  const minutesAgo = Math.floor(Math.random() * 10) + 1;
  notifTime.textContent = `${minutesAgo} menit yang lalu`;

  notifBox.classList.add("show");

  setTimeout(() => {
    notifBox.classList.remove("show");
  }, 4000);
}

function loopNotification() {
  showNotification();
  const interval = Math.floor(Math.random() * 2000) + 8000;
  setTimeout(loopNotification, interval);
}

loopNotification();
</script>
